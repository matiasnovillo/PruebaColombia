
@page "/PruebaColombia/DispensadorPage"

@using PruebaColombia.Areas.PruebaColombia.Repositories;
@using PruebaColombia.Areas.PruebaColombia.Entities;
@using PruebaColombia.Areas.PruebaColombia.DTOs;
@inject DispensadorRepository dispensadorRepository;

<PageTitle>Buscar Dispensador - PruebaColombia</PageTitle>

<PruebaColombia.Components.Layout.NavBarVerticalDashboard lstFoldersAndPages="lstFoldersAndPages"></PruebaColombia.Components.Layout.NavBarVerticalDashboard>

<div class="main-content position-relative max-height-vh-100 h-100">
    <PruebaColombia.Components.Layout.NavBarHorizontalDashboard></PruebaColombia.Components.Layout.NavBarHorizontalDashboard>
    <div class="container-fluid px-2 px-md-4">
        <div class="page-header min-height-300 border-radius-xl mt-4"
             style="background-image: url('assets/img/illustrations/Landscape2.jpg');">
            <span class="mask bg-gradient-primary opacity-6"></span>
        </div>
        <div class="card card-body mx-3 mx-md-4 mt-n6">
            <div class="card-header mb-0 pb-0 bg-white">
                <h1 class="mb-3">
                    Buscar dispensador
                </h1>
                <NavLink class="btn btn-outline-info" href="Dashboard">
                    <span class="fas fa-chevron-left" aria-hidden="true"></span>
                    &nbsp;Volver
                </NavLink>
                <NavLink class="btn btn-success text-white" href="PruebaColombia/DispensadorPage/0">
                    <span class="fas fa-plus" aria-hidden="true"></span>
                    &nbsp;Crear dispensador
                </NavLink>
            </div>
            <div class="card-body px-0">
                @((MarkupString)Message)
                <div class="row">
                    <div class="col-12 col-md-4">
                        <!--Searchbox-->
                        <input type="search" @oninput="SearchText"
                               class="form-control"
                               placeholder="Buscar dispensador por DispensadorId..." />
                        <br />
                        <!--Strict or lax search-->
                        <div>
                            <h6><b>Búsqueda estricta o laxa</b></h6>
                            <div class="form-check form-switch">
                                <input class="form-check-input"
                                       type="checkbox"
                                       name="strict-search"
                                       @bind="checkStrict"
                                       id="strict-search" />
                                <label class="form-check-label"
                                       for="strict-search">
                                    Búsqueda estricta
                                </label>
                            </div>
                        </div>
                        <br />
                        <h6><b>Tipo de vista</b></h6>
                        <div class="btn-group mb-3" role="group" aria-label="btngroup">
                            <button type="button" 
                                class="btn bg-gradient-primary"
                                onclick=@(() => ChangeView("table"))>
                                <i class="fas fa-table"></i>
                                Tabla
                            </button>
                            <button type="button" 
                                class="btn bg-gradient-primary"
                                onclick=@(() => ChangeView("list"))>
                                <i class="fas fa-th-list"></i>
                                Cartas
                            </button>
                        </div>
                    </div>
                    <div class="col-12 col-md-8">
                        <div class="row">
                            <div class="d-flex justify-content-end">
                                <!--Export buttons-->
                                <button type="button"
                                        @onclick="ConvertToExcel"
                                        class="btn btn-outline-info ml-4 mb-4">
                                    <i class="fas fa-file"></i>
                                    Exportar a Excel
                                </button>
                                <button type="button"
                                        @onclick="ConvertToCSV"
                                        class="btn btn-outline-warning mb-4 mx-3">
                                    <i class="fas fa-file"></i>
                                    Exportar a CSV
                                </button>
                                <button type="button"
                                        @onclick="ConvertToPDF"
                                        class="btn btn-outline-success mb-4">
                                    <i class="fas fa-file"></i>
                                    Exportar a PDF
                                </button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="d-flex justify-content-end">
                                <!--Download buttons-->
                                @if (ShowDownloadButtonForExcel)
                                {
                                    <a class="btn btn-info mb-4"
                                       href="@DownloadPathForExcel"
                                       download>
                                        <i class="fas fa-download"></i>
                                        Descargar
                                    </a>
                                }
                                @if (ShowDownloadButtonForCSV)
                                {
                                    <a class="btn btn-warning mb-4 mx-3"
                                       href="@DownloadPathForCSV"
                                       download>
                                        <i class="fas fa-download"></i>
                                        Descargar
                                    </a>
                                }
                                @if (ShowDownloadButtonForPDF)
                                {
                                    <a class="btn btn-success mb-4"
                                       href="@DownloadPathForPDF"
                                       download>
                                        <i class="fas fa-download"></i>
                                        Descargar
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <!--Table-->
                <h6><b>Nº de registros: @TotalRows</b></h6>
                @if (ChosenView == "table")
                {
                    <table class="table table-striped table-hover table-bordered table-responsive mt-4">
                        <thead>
                            <tr>
                                <th>DispensadorId</th>
                                <th>Active</th>
                                <th>DateTimeCreation</th>
                                <th>DateTimeLastModification</th>
                                <th>UserCreationId</th>
                                <th>UserLastModificationId</th>
                                <th>Nombre</th>
                                <th>CantidadDeManguera</th>
                                
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (paginatedDispensadorDTO != null)
                            {
                                @for (int i = 0; i < paginatedDispensadorDTO.lstDispensador.Count(); i++)
                                {
                                    int deleteButton = @paginatedDispensadorDTO.lstDispensador[i]!.DispensadorId;

                                    <tr>
                                        <td>@paginatedDispensadorDTO.lstDispensador[i]?.DispensadorId</td>
                                        @if (@paginatedDispensadorDTO.lstDispensador[i]!.Active)
                                        {
                                            <td>
                                                <span class="badge rounded-pill bg-success">Sí</span>
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                <span class="badge rounded-pill bg-danger">No</span>
                                            </td>
                                        }
                                        <td>@paginatedDispensadorDTO.lstDispensador[i]?.DateTimeCreation</td>
                                        <td>@paginatedDispensadorDTO.lstDispensador[i]?.DateTimeLastModification</td>
                                        <td>@paginatedDispensadorDTO.lstDispensador[i]?.UserCreationId</td>
                                        <td>@paginatedDispensadorDTO.lstDispensador[i]?.UserLastModificationId</td>
                                        <td>@paginatedDispensadorDTO.lstDispensador[i]?.Nombre</td>
                                        <td>@paginatedDispensadorDTO.lstDispensador[i]?.CantidadDeManguera</td>
                                        
                                        <td>
                                            <div class="nav-item">
                                                <button class="btn btn-sm btn-outline-danger"
                                                        onclick=@(() => Delete(deleteButton))>
                                                    <span class="fas fa-trash" aria-hidden="true"></span>
                                                </button>
                                            </div>
                                            <div class="nav-item mt-2">
                                                <a class="btn btn-sm btn-outline-info"
                                                   href="PruebaColombia/DispensadorPage/@paginatedDispensadorDTO.lstDispensador[i]?.DispensadorId">
                                                    <span class="fas fa-pen" aria-hidden="true"></span>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    @if (paginatedDispensadorDTO != null)      
                    {
                        @for (int i = 0; i < paginatedDispensadorDTO.lstDispensador.Count(); i++)
                        {
                            int deleteButton = @paginatedDispensadorDTO.lstDispensador[i]!.DispensadorId;

                            <div class="card shadow-lg mt-2">
                                <div class="card-body">
                                        <p><b>DispensadorId: </b>@paginatedDispensadorDTO.lstDispensador[i]?.DispensadorId</p>
                                        @if (@paginatedDispensadorDTO.lstDispensador[i]!.Active)
                                        {
                                            <p>
                                                <b>Active: </b>
                                                <span class="badge rounded-pill bg-success">
                                                    Sí
                                                </span>
                                            </p>
                                        }
                                        else
                                        {
                                            <p>
                                                <b>Active: </b>
                                                <span class="badge rounded-pill bg-danger">
                                                    No
                                                </span>
                                            </p>
                                        }
                                        <p><b>DateTimeCreation: </b>@paginatedDispensadorDTO.lstDispensador[i]?.DateTimeCreation</p>
                                        <p><b>DateTimeLastModification: </b>@paginatedDispensadorDTO.lstDispensador[i]?.DateTimeLastModification</p>
                                        <p><b>UserCreationId: </b>@paginatedDispensadorDTO.lstDispensador[i]?.UserCreationId</p>
                                        <p><b>UserLastModificationId: </b>@paginatedDispensadorDTO.lstDispensador[i]?.UserLastModificationId</p>
                                        <p><b>Nombre: </b>@paginatedDispensadorDTO.lstDispensador[i]?.Nombre</p>
                                        <p><b>CantidadDeManguera: </b>@paginatedDispensadorDTO.lstDispensador[i]?.CantidadDeManguera</p>
                                        
                                </div>
                                <div class="card-footer text-body-secondary">
                                    <div class="row">
                                        <div class="col-10">
                                            &nbsp;
                                        </div>
                                        <div class="col-2">
                                            <button class="btn btn-lg btn-outline-danger"
                                                    onclick=@(() => Delete(deleteButton))>
                                                <span class="fas fa-trash" aria-hidden="true"></span>
                                            </button>
                                            <a class="btn btn-lg btn-outline-info"
                                                href="PruebaColombia/DispensadorPage/@paginatedDispensadorDTO.lstDispensador[i]?.DispensadorId">
                                                <span class="fas fa-pen" aria-hidden="true"></span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }

                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">
                        <li class="page-item
                        @(paginatedDispensadorDTO!.HasPreviousPage ? "" : "disabled")">
                            <button class="page-link"
                                    disabled="@(!paginatedDispensadorDTO.HasPreviousPage)"
                                    @onclick="() => OnPreviousPage()">
                                <i class="fas fa-chevron-left"></i>
                            </button>
                        </li>
                        @for (int i = 1; i <= paginatedDispensadorDTO.TotalPages; i++)
                        {
                            int currentPage = i;
                            <li class="page-item
                            @(i == paginatedDispensadorDTO.PageIndex ? "active" : "")">
                                <button class="page-link"
                                        onclick=@(() => OnPageSelected(currentPage))>
                                    @i
                                </button>
                            </li>
                        }
                        <li class="page-item
                        @(paginatedDispensadorDTO.HasNextPage ? "" : "disabled")">
                            <button class="page-link"
                                    disabled="@(!paginatedDispensadorDTO.HasNextPage)"
                                    @onclick="() => OnNextPage()">
                                <i class="fas fa-chevron-right"></i>
                            </button>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
    <PruebaColombia.Components.Layout.FooterDashboard></PruebaColombia.Components.Layout.FooterDashboard>
</div>

@code {
    #region Properties
    public List<folderForDashboard> lstFoldersAndPages { get; set; } = [];

    public int TotalRows { get; set; } = 0;

    public string? ChosenView { get; set; }

    public bool checkStrict { get; set; }

    public string TextToSearch { get; set; } = "";

    public string Message { get; set; } = "";

    public bool ShowDownloadButtonForExcel { get; set; }
    public bool ShowDownloadButtonForPDF { get; set; }
    public bool ShowDownloadButtonForCSV { get; set; }

    public string? DownloadPathForExcel { get; set; }
    public string? DownloadPathForPDF { get; set; }
    public string? DownloadPathForCSV { get; set; }

    public User User = new();

    public Dispensador Dispensador = new();

    paginatedDispensadorDTO paginatedDispensadorDTO = new();
    #endregion

    protected override void OnInitialized()
    {
        try
        {
            //Look for saved user in shared component, simulates a session
            User = StateContainer.User == null ? new() : StateContainer.User;

            lstFoldersAndPages = [];

            paginatedDispensadorDTO = new();
            paginatedDispensadorDTO.lstDispensador = [];

            if (User != null)
            {
                if (User.UserId != 0)
                {
                    //Logged user
                    if (User.RoleId != 1) //Only Root can access
                    {
                        NavigationManager.NavigateTo("403");
                    }

                    List<Menu> lstMenu = menuRepository
                                            .GetAll();

                    lstFoldersAndPages = rolemenuRepository
                                            .GetAllPagesAndFoldersForDashboardByRoleId(User.RoleId);

                    paginatedDispensadorDTO = dispensadorRepository
                                                .GetAllByDispensadorIdPaginated(
                                                    "",
                                                    checkStrict,
                                                    1,
                                                    15);

                    TotalRows = dispensadorRepository
                                    .Count();

                    ChosenView = "list";
                }
                else
                {
                    //Not logged user

                    //Redirect to...
                    NavigationManager.NavigateTo("Login");
                }
            }
            else
            {
                //Impossible
            }

            base.OnInitialized();
        }
        catch (Exception ex)
        {
            Failure failure = new()
            {
                Active = true,
                DateTimeCreation = DateTime.Now,
                DateTimeLastModification = DateTime.Now,
                UserCreationId = 1,
                UserLastModificationId = 1,
                EmergencyLevel = 1,
                Comment = "",
                Message = ex.Message,
                Source = ex.Source,
                StackTrace = ex.StackTrace
            };

            failureRepository.Add(failure);

            Message = $@"<div class=""alert alert-danger text-white font-weight-bold"" role=""alert"">
                                Hubo un error. Intente nuevamente. Mensaje del error: {ex.Message}
                            </div>";
        }

    }

    #region Events
    private async Task SearchText(ChangeEventArgs args)
    {
        try
        {
            //Basic configuration
            Message = "";

            TextToSearch = args.Value.ToString();

            paginatedDispensadorDTO = dispensadorRepository
                                        .GetAllByDispensadorIdPaginated(
                                            TextToSearch,
                                            checkStrict,
                                            1,
                                            15);

            TotalRows = dispensadorRepository
                            .Count();

            //Re-render the page
            await InvokeAsync(() => StateHasChanged()).ConfigureAwait(false);
        }
        catch (Exception ex)
        {
            Failure failure = new()
            {
                Active = true,
                DateTimeCreation = DateTime.Now,
                DateTimeLastModification = DateTime.Now,
                UserCreationId = 1,
                UserLastModificationId = 1,
                EmergencyLevel = 1,
                Comment = "",
                Message = ex.Message,
                Source = ex.Source,
                StackTrace = ex.StackTrace
            };

            failureRepository.Add(failure);

            Message = $@"<div class=""alert alert-danger text-white font-weight-bold"" role=""alert"">
                                Hubo un error. Intente nuevamente. Mensaje del error: {ex.Message}
                            </div>";
        }

    }

    private async Task OnPreviousPage()
    {
        if (paginatedDispensadorDTO.HasPreviousPage)
        {
            paginatedDispensadorDTO = dispensadorRepository
                                        .GetAllByDispensadorIdPaginated(
                                            TextToSearch,
                                            checkStrict,
                                            (paginatedDispensadorDTO.PageIndex - 1),
                                            paginatedDispensadorDTO.PageSize);
        }

        TotalRows = dispensadorRepository
                            .Count();

        //Re-render the page
        await InvokeAsync(() => StateHasChanged()).ConfigureAwait(false);
    }

    private async Task OnPageSelected(int pageIndex)
    {
        paginatedDispensadorDTO = dispensadorRepository
                                            .GetAllByDispensadorIdPaginated(
                                                TextToSearch,
                                                checkStrict,
                                                pageIndex,
                                                paginatedDispensadorDTO.PageSize);

        TotalRows = dispensadorRepository
                        .Count();

        //Re-render the page
        await InvokeAsync(() => StateHasChanged()).ConfigureAwait(false);
    }

    private async Task OnNextPage()
    {
        if (paginatedDispensadorDTO.HasNextPage)
        {
            paginatedDispensadorDTO = dispensadorRepository
                                        .GetAllByDispensadorIdPaginated(
                                            TextToSearch,
                                            checkStrict,
                                            (paginatedDispensadorDTO.PageIndex + 1),
                                            paginatedDispensadorDTO.PageSize);
        }

        TotalRows = dispensadorRepository
                            .Count();

        //Re-render the page
        await InvokeAsync(() => StateHasChanged()).ConfigureAwait(false);
    }

    private async Task ChangeView(string chosenView)
    {
        ChosenView = chosenView;

        //Re-render the page
        await InvokeAsync(() => StateHasChanged()).ConfigureAwait(false);
    }

    private async Task Delete(int dispensadorId)
    {
        try
        {
            dispensadorRepository.DeleteByDispensadorId(dispensadorId);

            paginatedDispensadorDTO = dispensadorRepository
                                        .GetAllByDispensadorIdPaginated(
                                            TextToSearch,
                                            checkStrict,
                                            1,
                                            15);

            TotalRows = dispensadorRepository
                                .Count();

            TextToSearch = "";

            Message = $@"<div class=""alert alert-success text-white font-weight-bold"" role=""alert"">
                                Register deleted correctly
                            </div>";

            //Re-render the page
            await InvokeAsync(() => StateHasChanged()).ConfigureAwait(false);
        }
        catch (Exception ex)
        {
            Failure failure = new()
            {
                Active = true,
                DateTimeCreation = DateTime.Now,
                DateTimeLastModification = DateTime.Now,
                UserCreationId = 1,
                UserLastModificationId = 1,
                EmergencyLevel = 1,
                Comment = "",
                Message = ex.Message,
                Source = ex.Source,
                StackTrace = ex.StackTrace
            };

            failureRepository.Add(failure);

            Message = $@"<div class=""alert alert-danger text-white font-weight-bold"" role=""alert"">
                                Hubo un error. Intente nuevamente. Mensaje del error: {ex.Message}
                            </div>";
        }
    }
    #endregion

    #region Conversions
    private async Task ConvertToExcel()
    {
        try
        {
            //Set initial state
            Message = "";

            using var Book = new XLWorkbook();

            DataTable dtDispensador = new DataTable();
            dtDispensador.TableName = "Dispensador";

            //We define another DataTable dtDispensadorCopy to avoid issue related to DateTime conversion
            DataTable dtDispensadorCopy = new DataTable();
            dtDispensadorCopy.TableName = "Dispensador";

            #region Define columns for dtDispensadorCopy
            DataColumn dtColumnDispensadorIdFordtDispensadorCopy = new DataColumn();
            dtColumnDispensadorIdFordtDispensadorCopy.DataType = typeof(string);
            dtColumnDispensadorIdFordtDispensadorCopy.ColumnName = "DispensadorId";
            dtDispensadorCopy.Columns.Add(dtColumnDispensadorIdFordtDispensadorCopy);

            DataColumn dtColumnActiveFordtDispensadorCopy = new DataColumn();
            dtColumnActiveFordtDispensadorCopy.DataType = typeof(string);
            dtColumnActiveFordtDispensadorCopy.ColumnName = "Active";
            dtDispensadorCopy.Columns.Add(dtColumnActiveFordtDispensadorCopy);

            DataColumn dtColumnDateTimeCreationFordtDispensadorCopy = new DataColumn();
            dtColumnDateTimeCreationFordtDispensadorCopy.DataType = typeof(string);
            dtColumnDateTimeCreationFordtDispensadorCopy.ColumnName = "DateTimeCreation";
            dtDispensadorCopy.Columns.Add(dtColumnDateTimeCreationFordtDispensadorCopy);

            DataColumn dtColumnDateTimeLastModificationFordtDispensadorCopy = new DataColumn();
            dtColumnDateTimeLastModificationFordtDispensadorCopy.DataType = typeof(string);
            dtColumnDateTimeLastModificationFordtDispensadorCopy.ColumnName = "DateTimeLastModification";
            dtDispensadorCopy.Columns.Add(dtColumnDateTimeLastModificationFordtDispensadorCopy);

            DataColumn dtColumnUserCreationIdFordtDispensadorCopy = new DataColumn();
            dtColumnUserCreationIdFordtDispensadorCopy.DataType = typeof(string);
            dtColumnUserCreationIdFordtDispensadorCopy.ColumnName = "UserCreationId";
            dtDispensadorCopy.Columns.Add(dtColumnUserCreationIdFordtDispensadorCopy);

            DataColumn dtColumnUserLastModificationIdFordtDispensadorCopy = new DataColumn();
            dtColumnUserLastModificationIdFordtDispensadorCopy.DataType = typeof(string);
            dtColumnUserLastModificationIdFordtDispensadorCopy.ColumnName = "UserLastModificationId";
            dtDispensadorCopy.Columns.Add(dtColumnUserLastModificationIdFordtDispensadorCopy);

            DataColumn dtColumnNombreFordtDispensadorCopy = new DataColumn();
            dtColumnNombreFordtDispensadorCopy.DataType = typeof(string);
            dtColumnNombreFordtDispensadorCopy.ColumnName = "Nombre";
            dtDispensadorCopy.Columns.Add(dtColumnNombreFordtDispensadorCopy);

            DataColumn dtColumnCantidadDeMangueraFordtDispensadorCopy = new DataColumn();
            dtColumnCantidadDeMangueraFordtDispensadorCopy.DataType = typeof(string);
            dtColumnCantidadDeMangueraFordtDispensadorCopy.ColumnName = "CantidadDeManguera";
            dtDispensadorCopy.Columns.Add(dtColumnCantidadDeMangueraFordtDispensadorCopy);

            
            #endregion

            dtDispensador = dispensadorRepository.GetAllInDataTable();

            foreach (DataRow DataRow in dtDispensador.Rows)
            {
                dtDispensadorCopy.Rows.Add(DataRow.ItemArray);
            }

            var Sheet = Book.Worksheets.Add(dtDispensadorCopy);

            Sheet.ColumnsUsed().AdjustToContents();

            DownloadPathForExcel = $@"wwwroot/Downloads/ExcelFiles/{DateTime.Now.ToString("yyyy_MM_dd_HH_mm_ss_fff")}.xlsx";
            Book.SaveAs(DownloadPathForExcel);

            //Delete wwwroot from path to download correctly
            DownloadPathForExcel = DownloadPathForExcel.Replace("wwwroot", "");

            ShowDownloadButtonForExcel = true;

            //Re-render the page
            await InvokeAsync(() => StateHasChanged()).ConfigureAwait(false);

        }
        catch (Exception ex)
        {
            Failure failure = new()
            {
                Active = true,
                DateTimeCreation = DateTime.Now,
                DateTimeLastModification = DateTime.Now,
                UserCreationId = 1,
                UserLastModificationId = 1,
                EmergencyLevel = 1,
                Comment = "",
                Message = ex.Message,
                Source = ex.Source,
                StackTrace = ex.StackTrace
            };

            failureRepository.Add(failure);
                        
            Message = $@"<div class=""alert alert-danger text-white font-weight-bold"" role=""alert"">
                                Hubo un error. Intente nuevamente. Mensaje del error: {ex.Message}
                            </div>";
        }
    }

    private async Task ConvertToCSV()
    {
        try
        {
            //Set initial state
            Message = "";

            List<Dispensador?> lstDispensador = dispensadorRepository
                                    .GetAll();

            DownloadPathForCSV = $@"wwwroot/Downloads/CSVFiles/{DateTime.Now.ToString("yyyy_MM_dd_HH_mm_ss_fff")}.csv";

            using (var Writer = new StreamWriter(DownloadPathForCSV))
            using (var CsvWriter = new CsvWriter(Writer,
                CultureInfo.InvariantCulture))
            {
                CsvWriter.WriteRecords(lstDispensador);
            }

            //Delete wwwroot from path to download correctly
            DownloadPathForCSV = DownloadPathForCSV.Replace("wwwroot", "");

            ShowDownloadButtonForCSV = true;

            //Re-render the page
            await InvokeAsync(() => StateHasChanged()).ConfigureAwait(false);             
        }
        catch (Exception ex)
        {
            Failure failure = new()
            {
                Active = true,
                DateTimeCreation = DateTime.Now,
                DateTimeLastModification = DateTime.Now,
                UserCreationId = 1,
                UserLastModificationId = 1,
                EmergencyLevel = 1,
                Comment = "",
                Message = ex.Message,
                Source = ex.Source,
                StackTrace = ex.StackTrace
            };

            failureRepository.Add(failure);
            
            Message = $@"<div class=""alert alert-danger text-white font-weight-bold"" role=""alert"">
                                Hubo un error. Intente nuevamente. Mensaje del error: {ex.Message}
                            </div>";
        }
    }

    private async Task ConvertToPDF()
    {
        try
        {
            //Set initial state
            Message = "";
            string ProjectName = "PruebaColombia";
            string Table = "Dispensador";
            var Renderer = new HtmlToPdf();
            string RowsAsHTML = "";

            List<Dispensador> lstDispensador = dispensadorRepository
                                    .GetAll();

            DownloadPathForPDF = $@"wwwroot/Downloads/PDFFiles/{DateTime.Now.ToString("yyyy_MM_dd_HH_mm_ss_fff")}.pdf";

            foreach (Dispensador? Dispensador in lstDispensador)
            {
