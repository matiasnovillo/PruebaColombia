
@page "/PruebaColombia/DispensadorMangueraPage"

@using PruebaColombia.Areas.PruebaColombia.Repositories;
@using PruebaColombia.Areas.PruebaColombia.Entities;
@using PruebaColombia.Areas.PruebaColombia.DTOs;
@inject DispensadorMangueraRepository dispensadormangueraRepository;

<PageTitle>Buscar manguera - PruebaColombia</PageTitle>

<PruebaColombia.Components.Layout.NavBarVerticalDashboard lstFoldersAndPages="lstFoldersAndPages"></PruebaColombia.Components.Layout.NavBarVerticalDashboard>

<div class="main-content position-relative max-height-vh-100 h-100">
    <PruebaColombia.Components.Layout.NavBarHorizontalDashboard></PruebaColombia.Components.Layout.NavBarHorizontalDashboard>
    <div class="container-fluid px-2 px-md-4">
        <div class="page-header min-height-300 border-radius-xl mt-4"
             style="background-image: url('assets/img/illustrations/Landscape2.jpg');">
            <span class="mask bg-gradient-primary opacity-6"></span>
        </div>
        <div class="card card-body mx-3 mx-md-4 mt-n6">
            <div class="card-header mb-0 pb-0 bg-white">
                <h1 class="mb-3">
                    Buscar manguera
                </h1>
                <NavLink class="btn btn-outline-info" href="Dashboard">
                    <span class="fas fa-chevron-left" aria-hidden="true"></span>
                    &nbsp;Volver
                </NavLink>
                <NavLink class="btn btn-success text-white" href="PruebaColombia/DispensadorMangueraPage/0">
                    <span class="fas fa-plus" aria-hidden="true"></span>
                    &nbsp;Crear manguera
                </NavLink>
            </div>
            <div class="card-body px-0">
                @((MarkupString)Message)
                <div class="row">
                    <div class="col-12 col-md-4">
                        <!--Searchbox-->
                        <input type="search" @oninput="SearchText"
                               class="form-control"
                               placeholder="Buscar por nombre..." />
                        <br />
                        <!--Strict or lax search-->
                        <div>
                            <h6><b>Búsqueda estricta o laxa</b></h6>
                            <div class="form-check form-switch">
                                <input class="form-check-input"
                                       type="checkbox"
                                       name="strict-search"
                                       @bind="checkStrict"
                                       id="strict-search" />
                                <label class="form-check-label"
                                       for="strict-search">
                                    Búsqueda estricta
                                </label>
                            </div>
                        </div>
                        <br />
                        <h6><b>Tipo de vista</b></h6>
                        <div class="btn-group mb-3" role="group" aria-label="btngroup">
                            <button type="button" 
                                class="btn bg-gradient-primary"
                                onclick=@(() => ChangeView("table"))>
                                <i class="fas fa-table"></i>
                                Tabla
                            </button>
                            <button type="button" 
                                class="btn bg-gradient-primary"
                                onclick=@(() => ChangeView("list"))>
                                <i class="fas fa-th-list"></i>
                                Cartas
                            </button>
                        </div>
                    </div>
                    <div class="col-12 col-md-8">
                        <div class="row">
                            <div class="d-flex justify-content-end">
                                <!--Export buttons-->
                                <button type="button"
                                        @onclick="ConvertToExcel"
                                        class="btn btn-outline-info ml-4 mb-4">
                                    <i class="fas fa-file"></i>
                                    Exportar a Excel
                                </button>
                                <button type="button"
                                        @onclick="ConvertToCSV"
                                        class="btn btn-outline-warning mb-4 mx-3">
                                    <i class="fas fa-file"></i>
                                    Exportar a CSV
                                </button>
                                <button type="button"
                                        @onclick="ConvertToPDF"
                                        class="btn btn-outline-success mb-4">
                                    <i class="fas fa-file"></i>
                                    Exportar a PDF
                                </button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="d-flex justify-content-end">
                                <!--Download buttons-->
                                @if (ShowDownloadButtonForExcel)
                                {
                                    <a class="btn btn-info mb-4"
                                       href="@DownloadPathForExcel"
                                       download>
                                        <i class="fas fa-download"></i>
                                        Descargar
                                    </a>
                                }
                                @if (ShowDownloadButtonForCSV)
                                {
                                    <a class="btn btn-warning mb-4 mx-3"
                                       href="@DownloadPathForCSV"
                                       download>
                                        <i class="fas fa-download"></i>
                                        Descargar
                                    </a>
                                }
                                @if (ShowDownloadButtonForPDF)
                                {
                                    <a class="btn btn-success mb-4"
                                       href="@DownloadPathForPDF"
                                       download>
                                        <i class="fas fa-download"></i>
                                        Descargar
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <!--Table-->
                <h6><b>Nº de registros: @TotalRows</b></h6>
                @if (ChosenView == "table")
                {
                    <table class="table table-striped table-hover table-bordered table-responsive mt-4">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Volumen</th>
                                <th>Nombre</th>
                                <th>Dispensador</th>
                                <th>Producto</th>
                                
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (paginatedDispensadorMangueraDTO != null)
                            {
                                @for (int i = 0; i < paginatedDispensadorMangueraDTO.lstDispensadorManguera.Count(); i++)
                                {
                                    int deleteButton = @paginatedDispensadorMangueraDTO.lstDispensadorManguera[i]!.DispensadorMangueraId;

                                    <tr>
                                        <td>@paginatedDispensadorMangueraDTO.lstDispensadorManguera[i]?.DispensadorMangueraId</td>
                                        <td>@paginatedDispensadorMangueraDTO.lstDispensadorManguera[i]?.Volumen</td>
                                        <td>@paginatedDispensadorMangueraDTO.lstDispensadorManguera[i]?.Nombre</td>
                                        <td>@paginatedDispensadorMangueraDTO.lstDispensador[i]?.Nombre</td>
                                        <td>@paginatedDispensadorMangueraDTO.lstProducto[i]?.Name</td>
                                        
                                        <td>
                                            <div class="nav-item">
                                                <button class="btn btn-sm btn-outline-danger"
                                                        onclick=@(() => Delete(deleteButton))>
                                                    <span class="fas fa-trash" aria-hidden="true"></span>
                                                </button>
                                            </div>
                                            <div class="nav-item mt-2">
                                                <a class="btn btn-sm btn-outline-info"
                                                   href="PruebaColombia/DispensadorMangueraPage/@paginatedDispensadorMangueraDTO.lstDispensadorManguera[i]?.DispensadorMangueraId">
                                                    <span class="fas fa-pen" aria-hidden="true"></span>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    @if (paginatedDispensadorMangueraDTO != null)      
                    {
                        @for (int i = 0; i < paginatedDispensadorMangueraDTO.lstDispensadorManguera.Count(); i++)
                        {
                            int deleteButton = @paginatedDispensadorMangueraDTO.lstDispensadorManguera[i]!.DispensadorMangueraId;

                            <div class="card shadow-lg mt-2">
                                <div class="card-body">
                                        <p><b>ID: </b>@paginatedDispensadorMangueraDTO.lstDispensadorManguera[i]?.DispensadorMangueraId</p>
                                        <p><b>Volumen: </b>@paginatedDispensadorMangueraDTO.lstDispensadorManguera[i]?.Volumen</p>
                                        <p><b>Nombre: </b>@paginatedDispensadorMangueraDTO.lstDispensadorManguera[i]?.Nombre</p>
                                        <p><b>Dispensador: </b>@paginatedDispensadorMangueraDTO.lstDispensador[i]?.Nombre</p>
                                    <p><b>Producto: </b>@paginatedDispensadorMangueraDTO.lstProducto[i]?.Name</p>
                                        
                                </div>
                                <div class="card-footer text-body-secondary">
                                    <div class="row">
                                        <div class="col-10">
                                            &nbsp;
                                        </div>
                                        <div class="col-2">
                                            <button class="btn btn-lg btn-outline-danger"
                                                    onclick=@(() => Delete(deleteButton))>
                                                <span class="fas fa-trash" aria-hidden="true"></span>
                                            </button>
                                            <a class="btn btn-lg btn-outline-info"
                                                href="PruebaColombia/DispensadorMangueraPage/@paginatedDispensadorMangueraDTO.lstDispensadorManguera[i]?.DispensadorMangueraId">
                                                <span class="fas fa-pen" aria-hidden="true"></span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }

                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">
                        <li class="page-item
                        @(paginatedDispensadorMangueraDTO!.HasPreviousPage ? "" : "disabled")">
                            <button class="page-link"
                                    disabled="@(!paginatedDispensadorMangueraDTO.HasPreviousPage)"
                                    @onclick="() => OnPreviousPage()">
                                <i class="fas fa-chevron-left"></i>
                            </button>
                        </li>
                        @for (int i = 1; i <= paginatedDispensadorMangueraDTO.TotalPages; i++)
                        {
                            int currentPage = i;
                            <li class="page-item
                            @(i == paginatedDispensadorMangueraDTO.PageIndex ? "active" : "")">
                                <button class="page-link"
                                        onclick=@(() => OnPageSelected(currentPage))>
                                    @i
                                </button>
                            </li>
                        }
                        <li class="page-item
                        @(paginatedDispensadorMangueraDTO.HasNextPage ? "" : "disabled")">
                            <button class="page-link"
                                    disabled="@(!paginatedDispensadorMangueraDTO.HasNextPage)"
                                    @onclick="() => OnNextPage()">
                                <i class="fas fa-chevron-right"></i>
                            </button>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
    <PruebaColombia.Components.Layout.FooterDashboard></PruebaColombia.Components.Layout.FooterDashboard>
</div>

@code {
    #region Properties
    public List<folderForDashboard> lstFoldersAndPages { get; set; } = [];

    public int TotalRows { get; set; } = 0;

    public string? ChosenView { get; set; }

    public bool checkStrict { get; set; }

    public string TextToSearch { get; set; } = "";

    public string Message { get; set; } = "";

    public bool ShowDownloadButtonForExcel { get; set; }
    public bool ShowDownloadButtonForPDF { get; set; }
    public bool ShowDownloadButtonForCSV { get; set; }

    public string? DownloadPathForExcel { get; set; }
    public string? DownloadPathForPDF { get; set; }
    public string? DownloadPathForCSV { get; set; }

    public User User = new();

    public DispensadorManguera DispensadorManguera = new();

    paginatedDispensadorMangueraDTO paginatedDispensadorMangueraDTO = new();
    #endregion

    protected override void OnInitialized()
    {
        try
        {
            //Look for saved user in shared component, simulates a session
            User = StateContainer.User == null ? new() : StateContainer.User;

            lstFoldersAndPages = [];

            paginatedDispensadorMangueraDTO = new();
            paginatedDispensadorMangueraDTO.lstDispensadorManguera = [];

            if (User != null)
            {
                if (User.UserId != 0)
                {
                    //Logged user
                    if (User.RoleId != 1) //Only Root can access
                    {
                        NavigationManager.NavigateTo("403");
                    }

                    List<Menu> lstMenu = menuRepository
                                            .GetAll();

                    lstFoldersAndPages = rolemenuRepository
                                            .GetAllPagesAndFoldersForDashboardByRoleId(User.RoleId);

                    paginatedDispensadorMangueraDTO = dispensadormangueraRepository
                                                .GetAllByNamePaginated(
                                                    "",
                                                    checkStrict,
                                                    1,
                                                    15);

                    TotalRows = dispensadormangueraRepository
                                    .Count();

                    ChosenView = "list";
                }
                else
                {
                    //Not logged user

                    //Redirect to...
                    NavigationManager.NavigateTo("Login");
                }
            }
            else
            {
                //Impossible
            }

            base.OnInitialized();
        }
        catch (Exception ex)
        {
            Failure failure = new()
            {
                Active = true,
                DateTimeCreation = DateTime.Now,
                DateTimeLastModification = DateTime.Now,
                UserCreationId = 1,
                UserLastModificationId = 1,
                EmergencyLevel = 1,
                Comment = "",
                Message = ex.Message,
                Source = ex.Source,
                StackTrace = ex.StackTrace
            };

            failureRepository.Add(failure);

            Message = $@"<div class=""alert alert-danger text-white font-weight-bold"" role=""alert"">
                                Hubo un error. Intente nuevamente. Mensaje del error: {ex.Message}
                            </div>";
        }

    }

    #region Events
    private async Task SearchText(ChangeEventArgs args)
    {
        try
        {
            //Basic configuration
            Message = "";

            TextToSearch = args.Value.ToString();

            paginatedDispensadorMangueraDTO = dispensadormangueraRepository
                                        .GetAllByNamePaginated(
                                            TextToSearch,
                                            checkStrict,
                                            1,
                                            15);

            TotalRows = dispensadormangueraRepository
                            .Count();

            //Re-render the page
            await InvokeAsync(() => StateHasChanged()).ConfigureAwait(false);
        }
        catch (Exception ex)
        {
            Failure failure = new()
            {
                Active = true,
                DateTimeCreation = DateTime.Now,
                DateTimeLastModification = DateTime.Now,
                UserCreationId = 1,
                UserLastModificationId = 1,
                EmergencyLevel = 1,
                Comment = "",
                Message = ex.Message,
                Source = ex.Source,
                StackTrace = ex.StackTrace
            };

            failureRepository.Add(failure);

            Message = $@"<div class=""alert alert-danger text-white font-weight-bold"" role=""alert"">
                                Hubo un error. Intente nuevamente. Mensaje del error: {ex.Message}
                            </div>";
        }

    }

    private async Task OnPreviousPage()
    {
        if (paginatedDispensadorMangueraDTO.HasPreviousPage)
        {
            paginatedDispensadorMangueraDTO = dispensadormangueraRepository
                                        .GetAllByNamePaginated(
                                            TextToSearch,
                                            checkStrict,
                                            (paginatedDispensadorMangueraDTO.PageIndex - 1),
                                            paginatedDispensadorMangueraDTO.PageSize);
        }

        TotalRows = dispensadormangueraRepository
                            .Count();

        //Re-render the page
        await InvokeAsync(() => StateHasChanged()).ConfigureAwait(false);
    }

    private async Task OnPageSelected(int pageIndex)
    {
        paginatedDispensadorMangueraDTO = dispensadormangueraRepository
                                            .GetAllByNamePaginated(
                                                TextToSearch,
                                                checkStrict,
                                                pageIndex,
                                                paginatedDispensadorMangueraDTO.PageSize);

        TotalRows = dispensadormangueraRepository
                        .Count();

        //Re-render the page
        await InvokeAsync(() => StateHasChanged()).ConfigureAwait(false);
    }

    private async Task OnNextPage()
    {
        if (paginatedDispensadorMangueraDTO.HasNextPage)
        {
            paginatedDispensadorMangueraDTO = dispensadormangueraRepository
                                        .GetAllByNamePaginated(
                                            TextToSearch,
                                            checkStrict,
                                            (paginatedDispensadorMangueraDTO.PageIndex + 1),
                                            paginatedDispensadorMangueraDTO.PageSize);
        }

        TotalRows = dispensadormangueraRepository
                            .Count();

        //Re-render the page
        await InvokeAsync(() => StateHasChanged()).ConfigureAwait(false);
    }

    private async Task ChangeView(string chosenView)
    {
        ChosenView = chosenView;

        //Re-render the page
        await InvokeAsync(() => StateHasChanged()).ConfigureAwait(false);
    }

    private async Task Delete(int dispensadormangueraId)
    {
        try
        {
            dispensadormangueraRepository.DeleteByDispensadorMangueraId(dispensadormangueraId);

            paginatedDispensadorMangueraDTO = dispensadormangueraRepository
                                        .GetAllByNamePaginated(
                                            TextToSearch,
                                            checkStrict,
                                            1,
                                            15);

            TotalRows = dispensadormangueraRepository
                                .Count();

            TextToSearch = "";

            Message = $@"<div class=""alert alert-success text-white font-weight-bold"" role=""alert"">
                                Register deleted correctly
                            </div>";

            //Re-render the page
            await InvokeAsync(() => StateHasChanged()).ConfigureAwait(false);
        }
        catch (Exception ex)
        {
            Failure failure = new()
            {
                Active = true,
                DateTimeCreation = DateTime.Now,
                DateTimeLastModification = DateTime.Now,
                UserCreationId = 1,
                UserLastModificationId = 1,
                EmergencyLevel = 1,
                Comment = "",
                Message = ex.Message,
                Source = ex.Source,
                StackTrace = ex.StackTrace
            };

            failureRepository.Add(failure);

            Message = $@"<div class=""alert alert-danger text-white font-weight-bold"" role=""alert"">
                                Hubo un error. Intente nuevamente. Mensaje del error: {ex.Message}
                            </div>";
        }
    }
    #endregion

    #region Conversions
    private async Task ConvertToExcel()
    {
        try
        {
            //Set initial state
            Message = "";

            using var Book = new XLWorkbook();

            DataTable dtDispensadorManguera = new DataTable();
            dtDispensadorManguera.TableName = "DispensadorManguera";

            //We define another DataTable dtDispensadorMangueraCopy to avoid issue related to DateTime conversion
            DataTable dtDispensadorMangueraCopy = new DataTable();
            dtDispensadorMangueraCopy.TableName = "DispensadorManguera";

            #region Define columns for dtDispensadorMangueraCopy
            DataColumn dtColumnVolumenFordtDispensadorMangueraCopy = new DataColumn();
            dtColumnVolumenFordtDispensadorMangueraCopy.DataType = typeof(string);
            dtColumnVolumenFordtDispensadorMangueraCopy.ColumnName = "Volumen";
            dtDispensadorMangueraCopy.Columns.Add(dtColumnVolumenFordtDispensadorMangueraCopy);

            DataColumn dtColumnActiveFordtDispensadorMangueraCopy = new DataColumn();
            dtColumnActiveFordtDispensadorMangueraCopy.DataType = typeof(string);
            dtColumnActiveFordtDispensadorMangueraCopy.ColumnName = "Active";
            dtDispensadorMangueraCopy.Columns.Add(dtColumnActiveFordtDispensadorMangueraCopy);

            DataColumn dtColumnDateTimeCreationFordtDispensadorMangueraCopy = new DataColumn();
            dtColumnDateTimeCreationFordtDispensadorMangueraCopy.DataType = typeof(string);
            dtColumnDateTimeCreationFordtDispensadorMangueraCopy.ColumnName = "DateTimeCreation";
            dtDispensadorMangueraCopy.Columns.Add(dtColumnDateTimeCreationFordtDispensadorMangueraCopy);

            DataColumn dtColumnDateTimeLastModificationFordtDispensadorMangueraCopy = new DataColumn();
            dtColumnDateTimeLastModificationFordtDispensadorMangueraCopy.DataType = typeof(string);
            dtColumnDateTimeLastModificationFordtDispensadorMangueraCopy.ColumnName = "DateTimeLastModification";
            dtDispensadorMangueraCopy.Columns.Add(dtColumnDateTimeLastModificationFordtDispensadorMangueraCopy);

            DataColumn dtColumnUserCreationIdFordtDispensadorMangueraCopy = new DataColumn();
            dtColumnUserCreationIdFordtDispensadorMangueraCopy.DataType = typeof(string);
            dtColumnUserCreationIdFordtDispensadorMangueraCopy.ColumnName = "UserCreationId";
            dtDispensadorMangueraCopy.Columns.Add(dtColumnUserCreationIdFordtDispensadorMangueraCopy);

            DataColumn dtColumnUserLastModificationIdFordtDispensadorMangueraCopy = new DataColumn();
            dtColumnUserLastModificationIdFordtDispensadorMangueraCopy.DataType = typeof(string);
            dtColumnUserLastModificationIdFordtDispensadorMangueraCopy.ColumnName = "UserLastModificationId";
            dtDispensadorMangueraCopy.Columns.Add(dtColumnUserLastModificationIdFordtDispensadorMangueraCopy);

