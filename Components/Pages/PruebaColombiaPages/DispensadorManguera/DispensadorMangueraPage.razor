            dtColumnNombreFordtDispensadorMangueraCopy.ColumnName = "Nombre";
            dtDispensadorMangueraCopy.Columns.Add(dtColumnNombreFordtDispensadorMangueraCopy);

            DataColumn dtColumnDispensadorIdFordtDispensadorMangueraCopy = new DataColumn();
            dtColumnDispensadorIdFordtDispensadorMangueraCopy.DataType = typeof(string);
            dtColumnDispensadorIdFordtDispensadorMangueraCopy.ColumnName = "DispensadorId";
            dtDispensadorMangueraCopy.Columns.Add(dtColumnDispensadorIdFordtDispensadorMangueraCopy);

            DataColumn dtColumnProductoIdFordtDispensadorMangueraCopy = new DataColumn();
            dtColumnProductoIdFordtDispensadorMangueraCopy.DataType = typeof(string);
            dtColumnProductoIdFordtDispensadorMangueraCopy.ColumnName = "ProductoId";
            dtDispensadorMangueraCopy.Columns.Add(dtColumnProductoIdFordtDispensadorMangueraCopy);

            
            #endregion

            dtDispensadorManguera = dispensadormangueraRepository.GetAllInDataTable();

