
@page "/PruebaColombia/ProductoUnidadPage"

@using PruebaColombia.Areas.PruebaColombia.Repositories;
@using PruebaColombia.Areas.PruebaColombia.Entities;
@using PruebaColombia.Areas.PruebaColombia.DTOs;
@inject ProductoUnidadRepository productounidadRepository;

<PageTitle>Buscar ProductoUnidad - PruebaColombia</PageTitle>

<PruebaColombia.Components.Layout.NavBarVerticalDashboard lstFoldersAndPages="lstFoldersAndPages"></PruebaColombia.Components.Layout.NavBarVerticalDashboard>

<div class="main-content position-relative max-height-vh-100 h-100">
    <PruebaColombia.Components.Layout.NavBarHorizontalDashboard></PruebaColombia.Components.Layout.NavBarHorizontalDashboard>
    <div class="container-fluid px-2 px-md-4">
        <div class="page-header min-height-300 border-radius-xl mt-4"
             style="background-image: url('assets/img/illustrations/Landscape2.jpg');">
            <span class="mask bg-gradient-primary opacity-6"></span>
        </div>
        <div class="card card-body mx-3 mx-md-4 mt-n6">
            <div class="card-header mb-0 pb-0 bg-white">
                <h1 class="mb-3">
                    Buscar productounidad
                </h1>
                <NavLink class="btn btn-outline-info" href="Dashboard">
                    <span class="fas fa-chevron-left" aria-hidden="true"></span>
                    &nbsp;Volver
                </NavLink>
                <NavLink class="btn btn-success text-white" href="PruebaColombia/ProductoUnidadPage/0">
                    <span class="fas fa-plus" aria-hidden="true"></span>
                    &nbsp;Crear productounidad
                </NavLink>
            </div>
            <div class="card-body px-0">
                @((MarkupString)Message)
                <div class="row">
                    <div class="col-12 col-md-4">
                        <!--Searchbox-->
                        <input type="search" @oninput="SearchText"
                               class="form-control"
                               placeholder="Buscar productounidad por ProductoUnidadId..." />
                        <br />
                        <!--Strict or lax search-->
                        <div>
                            <h6><b>Búsqueda estricta o laxa</b></h6>
                            <div class="form-check form-switch">
                                <input class="form-check-input"
                                       type="checkbox"
                                       name="strict-search"
                                       @bind="checkStrict"
                                       id="strict-search" />
                                <label class="form-check-label"
                                       for="strict-search">
                                    Búsqueda estricta
                                </label>
                            </div>
                        </div>
                        <br />
                        <h6><b>Tipo de vista</b></h6>
                        <div class="btn-group mb-3" role="group" aria-label="btngroup">
                            <button type="button" 
                                class="btn bg-gradient-primary"
                                onclick=@(() => ChangeView("table"))>
                                <i class="fas fa-table"></i>
                                Tabla
                            </button>
                            <button type="button" 
                                class="btn bg-gradient-primary"
                                onclick=@(() => ChangeView("list"))>
                                <i class="fas fa-th-list"></i>
                                Cartas
                            </button>
                        </div>
                    </div>
                    <div class="col-12 col-md-8">
                        <div class="row">
                            <div class="d-flex justify-content-end">
                                <!--Export buttons-->
                                <button type="button"
                                        @onclick="ConvertToExcel"
                                        class="btn btn-outline-info ml-4 mb-4">
                                    <i class="fas fa-file"></i>
                                    Exportar a Excel
                                </button>
                                <button type="button"
                                        @onclick="ConvertToCSV"
                                        class="btn btn-outline-warning mb-4 mx-3">
                                    <i class="fas fa-file"></i>
                                    Exportar a CSV
                                </button>
                                <button type="button"
                                        @onclick="ConvertToPDF"
                                        class="btn btn-outline-success mb-4">
                                    <i class="fas fa-file"></i>
                                    Exportar a PDF
                                </button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="d-flex justify-content-end">
                                <!--Download buttons-->
                                @if (ShowDownloadButtonForExcel)
                                {
                                    <a class="btn btn-info mb-4"
                                       href="@DownloadPathForExcel"
                                       download>
                                        <i class="fas fa-download"></i>
                                        Descargar
                                    </a>
                                }
                                @if (ShowDownloadButtonForCSV)
                                {
                                    <a class="btn btn-warning mb-4 mx-3"
                                       href="@DownloadPathForCSV"
                                       download>
                                        <i class="fas fa-download"></i>
                                        Descargar
                                    </a>
                                }
                                @if (ShowDownloadButtonForPDF)
                                {
                                    <a class="btn btn-success mb-4"
                                       href="@DownloadPathForPDF"
                                       download>
                                        <i class="fas fa-download"></i>
                                        Descargar
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <!--Table-->
                <h6><b>Nº de registros: @TotalRows</b></h6>
                @if (ChosenView == "table")
                {
                    <table class="table table-striped table-hover table-bordered table-responsive mt-4">
                        <thead>
                            <tr>
                                <th>ProductoUnidadId</th>
                                <th>Active</th>
                                <th>DateTimeCreation</th>
                                <th>DateTimeLastModification</th>
                                <th>UserCreationId</th>
                                <th>UserLastModificationId</th>
                                <th>Nombre</th>
                                
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (paginatedProductoUnidadDTO != null)
                            {
                                @for (int i = 0; i < paginatedProductoUnidadDTO.lstProductoUnidad.Count(); i++)
                                {
                                    int deleteButton = @paginatedProductoUnidadDTO.lstProductoUnidad[i]!.ProductoUnidadId;

                                    <tr>
                                        <td>@paginatedProductoUnidadDTO.lstProductoUnidad[i]?.ProductoUnidadId</td>
                                        @if (@paginatedProductoUnidadDTO.lstProductoUnidad[i]!.Active)
                                        {
                                            <td>
                                                <span class="badge rounded-pill bg-success">Sí</span>
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                <span class="badge rounded-pill bg-danger">No</span>
                                            </td>
                                        }
                                        <td>@paginatedProductoUnidadDTO.lstProductoUnidad[i]?.DateTimeCreation</td>
                                        <td>@paginatedProductoUnidadDTO.lstProductoUnidad[i]?.DateTimeLastModification</td>
                                        <td>@paginatedProductoUnidadDTO.lstProductoUnidad[i]?.UserCreationId</td>
                                        <td>@paginatedProductoUnidadDTO.lstProductoUnidad[i]?.UserLastModificationId</td>
                                        <td>@paginatedProductoUnidadDTO.lstProductoUnidad[i]?.Nombre</td>
                                        
                                        <td>
                                            <div class="nav-item">
                                                <button class="btn btn-sm btn-outline-danger"
                                                        onclick=@(() => Delete(deleteButton))>
                                                    <span class="fas fa-trash" aria-hidden="true"></span>
                                                </button>
                                            </div>
                                            <div class="nav-item mt-2">
                                                <a class="btn btn-sm btn-outline-info"
                                                   href="PruebaColombia/ProductoUnidadPage/@paginatedProductoUnidadDTO.lstProductoUnidad[i]?.ProductoUnidadId">
                                                    <span class="fas fa-pen" aria-hidden="true"></span>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    @if (paginatedProductoUnidadDTO != null)      
                    {
                        @for (int i = 0; i < paginatedProductoUnidadDTO.lstProductoUnidad.Count(); i++)
                        {
                            int deleteButton = @paginatedProductoUnidadDTO.lstProductoUnidad[i]!.ProductoUnidadId;

                            <div class="card shadow-lg mt-2">
                                <div class="card-body">
                                        <p><b>ProductoUnidadId: </b>@paginatedProductoUnidadDTO.lstProductoUnidad[i]?.ProductoUnidadId</p>
                                        @if (@paginatedProductoUnidadDTO.lstProductoUnidad[i]!.Active)
                                        {
                                            <p>
                                                <b>Active: </b>
                                                <span class="badge rounded-pill bg-success">
                                                    Sí
                                                </span>
                                            </p>
                                        }
                                        else
                                        {
                                            <p>
                                                <b>Active: </b>
                                                <span class="badge rounded-pill bg-danger">
                                                    No
                                                </span>
                                            </p>
                                        }
                                        <p><b>DateTimeCreation: </b>@paginatedProductoUnidadDTO.lstProductoUnidad[i]?.DateTimeCreation</p>
                                        <p><b>DateTimeLastModification: </b>@paginatedProductoUnidadDTO.lstProductoUnidad[i]?.DateTimeLastModification</p>
                                        <p><b>UserCreationId: </b>@paginatedProductoUnidadDTO.lstProductoUnidad[i]?.UserCreationId</p>
                                        <p><b>UserLastModificationId: </b>@paginatedProductoUnidadDTO.lstProductoUnidad[i]?.UserLastModificationId</p>
                                        <p><b>Nombre: </b>@paginatedProductoUnidadDTO.lstProductoUnidad[i]?.Nombre</p>
                                        
                                </div>
                                <div class="card-footer text-body-secondary">
                                    <div class="row">
                                        <div class="col-10">
                                            &nbsp;
                                        </div>
                                        <div class="col-2">
                                            <button class="btn btn-lg btn-outline-danger"
                                                    onclick=@(() => Delete(deleteButton))>
                                                <span class="fas fa-trash" aria-hidden="true"></span>
                                            </button>
                                            <a class="btn btn-lg btn-outline-info"
                                                href="PruebaColombia/ProductoUnidadPage/@paginatedProductoUnidadDTO.lstProductoUnidad[i]?.ProductoUnidadId">
                                                <span class="fas fa-pen" aria-hidden="true"></span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }

                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">
                        <li class="page-item
                        @(paginatedProductoUnidadDTO!.HasPreviousPage ? "" : "disabled")">
                            <button class="page-link"
                                    disabled="@(!paginatedProductoUnidadDTO.HasPreviousPage)"
                                    @onclick="() => OnPreviousPage()">
                                <i class="fas fa-chevron-left"></i>
                            </button>
                        </li>
                        @for (int i = 1; i <= paginatedProductoUnidadDTO.TotalPages; i++)
                        {
                            int currentPage = i;
                            <li class="page-item
                            @(i == paginatedProductoUnidadDTO.PageIndex ? "active" : "")">
                                <button class="page-link"
                                        onclick=@(() => OnPageSelected(currentPage))>
                                    @i
                                </button>
                            </li>
                        }
                        <li class="page-item
                        @(paginatedProductoUnidadDTO.HasNextPage ? "" : "disabled")">
                            <button class="page-link"
                                    disabled="@(!paginatedProductoUnidadDTO.HasNextPage)"
                                    @onclick="() => OnNextPage()">
                                <i class="fas fa-chevron-right"></i>
                            </button>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
    <PruebaColombia.Components.Layout.FooterDashboard></PruebaColombia.Components.Layout.FooterDashboard>
</div>

@code {
    #region Properties
    public List<folderForDashboard> lstFoldersAndPages { get; set; } = [];

    public int TotalRows { get; set; } = 0;

    public string? ChosenView { get; set; }

    public bool checkStrict { get; set; }

    public string TextToSearch { get; set; } = "";

    public string Message { get; set; } = "";

    public bool ShowDownloadButtonForExcel { get; set; }
    public bool ShowDownloadButtonForPDF { get; set; }
    public bool ShowDownloadButtonForCSV { get; set; }

    public string? DownloadPathForExcel { get; set; }
    public string? DownloadPathForPDF { get; set; }
    public string? DownloadPathForCSV { get; set; }

    public User User = new();

    public ProductoUnidad ProductoUnidad = new();

    paginatedProductoUnidadDTO paginatedProductoUnidadDTO = new();
    #endregion

    protected override void OnInitialized()
    {
        try
        {
            //Look for saved user in shared component, simulates a session
            User = StateContainer.User == null ? new() : StateContainer.User;

            lstFoldersAndPages = [];

            paginatedProductoUnidadDTO = new();
            paginatedProductoUnidadDTO.lstProductoUnidad = [];

            if (User != null)
            {
                if (User.UserId != 0)
                {
                    List<Menu> lstMenu = menuRepository
                                            .GetAll();

                    lstFoldersAndPages = rolemenuRepository
                                            .GetAllPagesAndFoldersForDashboardByRoleId(User.RoleId);

                    paginatedProductoUnidadDTO = productounidadRepository
                                                .GetAllByProductoUnidadIdPaginated(
                                                    "",
                                                    checkStrict,
                                                    1,
                                                    15);

                    TotalRows = productounidadRepository
                                    .Count();

                    ChosenView = "list";
                }
                else
                {
                    //Not logged user

                    //Redirect to...
                    NavigationManager.NavigateTo("Login");
                }
            }
            else
            {
                //Impossible
            }

            base.OnInitialized();
        }
        catch (Exception ex)
        {
            Failure failure = new()
            {
                Active = true,
                DateTimeCreation = DateTime.Now,
                DateTimeLastModification = DateTime.Now,
                UserCreationId = 1,
                UserLastModificationId = 1,
                EmergencyLevel = 1,
                Comment = "",
                Message = ex.Message,
                Source = ex.Source,
                StackTrace = ex.StackTrace
            };

            failureRepository.Add(failure);

            Message = $@"<div class=""alert alert-danger text-white font-weight-bold"" role=""alert"">
                                Hubo un error. Intente nuevamente. Mensaje del error: {ex.Message}
                            </div>";
        }

    }

    #region Events
    private async Task SearchText(ChangeEventArgs args)
    {
        try
        {
            //Basic configuration
            Message = "";

            TextToSearch = args.Value.ToString();

            paginatedProductoUnidadDTO = productounidadRepository
                                        .GetAllByProductoUnidadIdPaginated(
                                            TextToSearch,
                                            checkStrict,
                                            1,
                                            15);

            TotalRows = productounidadRepository
                            .Count();

            //Re-render the page
            await InvokeAsync(() => StateHasChanged()).ConfigureAwait(false);
        }
        catch (Exception ex)
        {
            Failure failure = new()
            {
                Active = true,
                DateTimeCreation = DateTime.Now,
                DateTimeLastModification = DateTime.Now,
                UserCreationId = 1,
                UserLastModificationId = 1,
                EmergencyLevel = 1,
                Comment = "",
                Message = ex.Message,
                Source = ex.Source,
                StackTrace = ex.StackTrace
            };

            failureRepository.Add(failure);

            Message = $@"<div class=""alert alert-danger text-white font-weight-bold"" role=""alert"">
                                Hubo un error. Intente nuevamente. Mensaje del error: {ex.Message}
                            </div>";
        }

    }

    private async Task OnPreviousPage()
    {
        if (paginatedProductoUnidadDTO.HasPreviousPage)
        {
            paginatedProductoUnidadDTO = productounidadRepository
                                        .GetAllByProductoUnidadIdPaginated(
                                            TextToSearch,
                                            checkStrict,
                                            (paginatedProductoUnidadDTO.PageIndex - 1),
                                            paginatedProductoUnidadDTO.PageSize);
        }

        TotalRows = productounidadRepository
                            .Count();

        //Re-render the page
        await InvokeAsync(() => StateHasChanged()).ConfigureAwait(false);
    }

    private async Task OnPageSelected(int pageIndex)
    {
        paginatedProductoUnidadDTO = productounidadRepository
                                            .GetAllByProductoUnidadIdPaginated(
                                                TextToSearch,
                                                checkStrict,
                                                pageIndex,
                                                paginatedProductoUnidadDTO.PageSize);

        TotalRows = productounidadRepository
                        .Count();

        //Re-render the page
        await InvokeAsync(() => StateHasChanged()).ConfigureAwait(false);
    }

    private async Task OnNextPage()
    {
        if (paginatedProductoUnidadDTO.HasNextPage)
        {
            paginatedProductoUnidadDTO = productounidadRepository
                                        .GetAllByProductoUnidadIdPaginated(
                                            TextToSearch,
                                            checkStrict,
                                            (paginatedProductoUnidadDTO.PageIndex + 1),
                                            paginatedProductoUnidadDTO.PageSize);
        }

        TotalRows = productounidadRepository
                            .Count();

        //Re-render the page
        await InvokeAsync(() => StateHasChanged()).ConfigureAwait(false);
    }

    private async Task ChangeView(string chosenView)
    {
        ChosenView = chosenView;

        //Re-render the page
        await InvokeAsync(() => StateHasChanged()).ConfigureAwait(false);
    }

    private async Task Delete(int productounidadId)
    {
        try
        {
            productounidadRepository.DeleteByProductoUnidadId(productounidadId);

            paginatedProductoUnidadDTO = productounidadRepository
                                        .GetAllByProductoUnidadIdPaginated(
                                            TextToSearch,
                                            checkStrict,
                                            1,
                                            15);

            TotalRows = productounidadRepository
                                .Count();

            TextToSearch = "";

            Message = $@"<div class=""alert alert-success text-white font-weight-bold"" role=""alert"">
                                Register deleted correctly
                            </div>";

            //Re-render the page
            await InvokeAsync(() => StateHasChanged()).ConfigureAwait(false);
        }
        catch (Exception ex)
        {
            Failure failure = new()
            {
                Active = true,
                DateTimeCreation = DateTime.Now,
                DateTimeLastModification = DateTime.Now,
                UserCreationId = 1,
                UserLastModificationId = 1,
                EmergencyLevel = 1,
                Comment = "",
                Message = ex.Message,
                Source = ex.Source,
                StackTrace = ex.StackTrace
            };

            failureRepository.Add(failure);

            Message = $@"<div class=""alert alert-danger text-white font-weight-bold"" role=""alert"">
                                Hubo un error. Intente nuevamente. Mensaje del error: {ex.Message}
                            </div>";
        }
    }
    #endregion

    #region Conversions
    private async Task ConvertToExcel()
    {
        try
        {
            //Set initial state
            Message = "";

            using var Book = new XLWorkbook();

            DataTable dtProductoUnidad = new DataTable();
            dtProductoUnidad.TableName = "ProductoUnidad";

            //We define another DataTable dtProductoUnidadCopy to avoid issue related to DateTime conversion
            DataTable dtProductoUnidadCopy = new DataTable();
            dtProductoUnidadCopy.TableName = "ProductoUnidad";

            #region Define columns for dtProductoUnidadCopy
            DataColumn dtColumnProductoUnidadIdFordtProductoUnidadCopy = new DataColumn();
            dtColumnProductoUnidadIdFordtProductoUnidadCopy.DataType = typeof(string);
            dtColumnProductoUnidadIdFordtProductoUnidadCopy.ColumnName = "ProductoUnidadId";
            dtProductoUnidadCopy.Columns.Add(dtColumnProductoUnidadIdFordtProductoUnidadCopy);

            DataColumn dtColumnActiveFordtProductoUnidadCopy = new DataColumn();
            dtColumnActiveFordtProductoUnidadCopy.DataType = typeof(string);
            dtColumnActiveFordtProductoUnidadCopy.ColumnName = "Active";
            dtProductoUnidadCopy.Columns.Add(dtColumnActiveFordtProductoUnidadCopy);

            DataColumn dtColumnDateTimeCreationFordtProductoUnidadCopy = new DataColumn();
            dtColumnDateTimeCreationFordtProductoUnidadCopy.DataType = typeof(string);
            dtColumnDateTimeCreationFordtProductoUnidadCopy.ColumnName = "DateTimeCreation";
            dtProductoUnidadCopy.Columns.Add(dtColumnDateTimeCreationFordtProductoUnidadCopy);

            DataColumn dtColumnDateTimeLastModificationFordtProductoUnidadCopy = new DataColumn();
            dtColumnDateTimeLastModificationFordtProductoUnidadCopy.DataType = typeof(string);
            dtColumnDateTimeLastModificationFordtProductoUnidadCopy.ColumnName = "DateTimeLastModification";
            dtProductoUnidadCopy.Columns.Add(dtColumnDateTimeLastModificationFordtProductoUnidadCopy);

            DataColumn dtColumnUserCreationIdFordtProductoUnidadCopy = new DataColumn();
            dtColumnUserCreationIdFordtProductoUnidadCopy.DataType = typeof(string);
            dtColumnUserCreationIdFordtProductoUnidadCopy.ColumnName = "UserCreationId";
            dtProductoUnidadCopy.Columns.Add(dtColumnUserCreationIdFordtProductoUnidadCopy);

            DataColumn dtColumnUserLastModificationIdFordtProductoUnidadCopy = new DataColumn();
            dtColumnUserLastModificationIdFordtProductoUnidadCopy.DataType = typeof(string);
            dtColumnUserLastModificationIdFordtProductoUnidadCopy.ColumnName = "UserLastModificationId";
            dtProductoUnidadCopy.Columns.Add(dtColumnUserLastModificationIdFordtProductoUnidadCopy);

            DataColumn dtColumnNombreFordtProductoUnidadCopy = new DataColumn();
            dtColumnNombreFordtProductoUnidadCopy.DataType = typeof(string);
            dtColumnNombreFordtProductoUnidadCopy.ColumnName = "Nombre";
            dtProductoUnidadCopy.Columns.Add(dtColumnNombreFordtProductoUnidadCopy);

            
            #endregion

            dtProductoUnidad = productounidadRepository.GetAllInDataTable();

            foreach (DataRow DataRow in dtProductoUnidad.Rows)
            {
                dtProductoUnidadCopy.Rows.Add(DataRow.ItemArray);
            }

            var Sheet = Book.Worksheets.Add(dtProductoUnidadCopy);

            Sheet.ColumnsUsed().AdjustToContents();

            DownloadPathForExcel = $@"wwwroot/Downloads/ExcelFiles/{DateTime.Now.ToString("yyyy_MM_dd_HH_mm_ss_fff")}.xlsx";
            Book.SaveAs(DownloadPathForExcel);

            //Delete wwwroot from path to download correctly
            DownloadPathForExcel = DownloadPathForExcel.Replace("wwwroot", "");

            ShowDownloadButtonForExcel = true;

            //Re-render the page
            await InvokeAsync(() => StateHasChanged()).ConfigureAwait(false);

        }
        catch (Exception ex)
        {
            Failure failure = new()
            {
                Active = true,
                DateTimeCreation = DateTime.Now,
                DateTimeLastModification = DateTime.Now,
                UserCreationId = 1,
                UserLastModificationId = 1,
                EmergencyLevel = 1,
                Comment = "",
                Message = ex.Message,
                Source = ex.Source,
                StackTrace = ex.StackTrace
            };

            failureRepository.Add(failure);
                        
            Message = $@"<div class=""alert alert-danger text-white font-weight-bold"" role=""alert"">
                                Hubo un error. Intente nuevamente. Mensaje del error: {ex.Message}
                            </div>";
        }
    }

    private async Task ConvertToCSV()
    {
        try
        {
            //Set initial state
            Message = "";

            List<ProductoUnidad?> lstProductoUnidad = productounidadRepository
                                    .GetAll();

            DownloadPathForCSV = $@"wwwroot/Downloads/CSVFiles/{DateTime.Now.ToString("yyyy_MM_dd_HH_mm_ss_fff")}.csv";

            using (var Writer = new StreamWriter(DownloadPathForCSV))
            using (var CsvWriter = new CsvWriter(Writer,
                CultureInfo.InvariantCulture))
            {
                CsvWriter.WriteRecords(lstProductoUnidad);
            }

            //Delete wwwroot from path to download correctly
            DownloadPathForCSV = DownloadPathForCSV.Replace("wwwroot", "");

            ShowDownloadButtonForCSV = true;

            //Re-render the page
            await InvokeAsync(() => StateHasChanged()).ConfigureAwait(false);             
        }
        catch (Exception ex)
        {
            Failure failure = new()
            {
                Active = true,
                DateTimeCreation = DateTime.Now,
                DateTimeLastModification = DateTime.Now,
                UserCreationId = 1,
                UserLastModificationId = 1,
                EmergencyLevel = 1,
                Comment = "",
                Message = ex.Message,
                Source = ex.Source,
                StackTrace = ex.StackTrace
            };

            failureRepository.Add(failure);
            
            Message = $@"<div class=""alert alert-danger text-white font-weight-bold"" role=""alert"">
                                Hubo un error. Intente nuevamente. Mensaje del error: {ex.Message}
                            </div>";
        }
    }

    private async Task ConvertToPDF()
    {
        try
        {
            //Set initial state
            Message = "";
            string ProjectName = "PruebaColombia";
            string Table = "ProductoUnidad";
            var Renderer = new HtmlToPdf();
            string RowsAsHTML = "";

            List<ProductoUnidad> lstProductoUnidad = productounidadRepository
                                    .GetAll();

            DownloadPathForPDF = $@"wwwroot/Downloads/PDFFiles/{DateTime.Now.ToString("yyyy_MM_dd_HH_mm_ss_fff")}.pdf";

            foreach (ProductoUnidad? ProductoUnidad in lstProductoUnidad)
            {
                RowsAsHTML += $@"{ProductoUnidad?.ToStringOnlyValuesForHTML()}";
            }

            Renderer.RenderHtmlAsPdf($@"<table cellpadding=""0"" cellspacing=""0"" border=""0"" width=""88%"" style=""width: 88% !important; min-width: 88%; max-width: 88%;"">
    <tr>
    <td align=""left"" valign=""top"">
        <font face=""'Source Sans Pro', sans-serif"" color=""#1a1a1a"" style=""font-size: 52px; line-height: 55px; font-weight: 300; letter-spacing: -1.5px;"">
            <span style=""font-family: 'Source Sans Pro', Arial, Tahoma, Geneva, sans-serif; color: #1a1a1a; font-size: 52px; line-height: 55px; font-weight: 300; letter-spacing: -1.5px;"">{ProjectName}</span>
